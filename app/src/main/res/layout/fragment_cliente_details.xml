<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/black_transparent_12p">

        <android.support.v7.widget.Toolbar
            android:id="@+id/fragment_cliente_details__toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"/>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:scrollbarStyle="outsideOverlay">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="32dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="72dp">

                <ImageView
                    android:id="@+id/imageView_telefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/ic_phone_black_24dp" />

                <com.actinarium.aligned.TextView
                    android:id="@+id/fragment_cliente_details__telefono"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="670 04 09 00"
                    android:textSize="14sp"
                    app:lastLineDescent="8sp"
                    app:leading="24sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="72dp">

                <ImageView
                    android:id="@+id/imageView_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/ic_email_black_24dp" />

                <com.actinarium.aligned.TextView
                    android:id="@+id/fragment_cliente_details__email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:text="raul.gomo@gmail.com"
                    android:textSize="14sp"
                    app:lastLineDescent="8sp"
                    app:leading="24sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/ic_wc_black_24dp" />

                <com.actinarium.aligned.TextView
                    android:id="@+id/fragment_cliente_details__sexo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:text="Hombre"
                    android:textSize="14sp"
                    app:lastLineDescent="8sp"
                    app:leading="24sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">

                <com.actinarium.aligned.TextView
                    android:id="@+id/fragment_cliente_details__edad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="56dp"
                    android:text="25"
                    android:textSize="14sp"
                    app:lastLineDescent="8sp"
                    app:leading="24sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/ic_straighten_black_24dp" />

                <com.actinarium.aligned.TextView
                    android:id="@+id/fragment_cliente_details__peso"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:text="70"
                    android:textSize="14sp"
                    app:lastLineDescent="8sp"
                    app:leading="24sp" />
                <com.actinarium.aligned.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" kg"
                    android:textSize="14sp"
                    app:lastLineDescent="8sp"
                    app:leading="24sp" />
                <com.actinarium.aligned.TextView
                    android:id="@+id/fragment_cliente_details__altura"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="72dp"
                    android:text="1'71"
                    android:textSize="14sp"
                    app:lastLineDescent="8sp"
                    app:leading="24sp" />
                <com.actinarium.aligned.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" cm"
                    android:textSize="14sp"
                    app:lastLineDescent="8sp"
                    app:leading="24sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>