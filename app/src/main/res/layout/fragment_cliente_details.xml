<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:background="@color/black_transparent_12p">

        <android.support.v7.widget.Toolbar
            android:id="@+id/fragment_cliente_details__toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/fragmente_cliente_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_phone_black_24dp"
                app:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@id/fragmente_cliente_details"
                app:layout_editor_absoluteX="16dp"
                app:layout_editor_absoluteY="16dp"
                tools:ignore="MissingConstraints"
                tools:layout_constraintBaseline_creator="0"
                tools:layout_constraintLeft_creator="0"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/fragment_cliente_details__telefono"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:text="670 04 09 00"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_editor_absoluteX="73dp"
                app:layout_editor_absoluteY="16dp"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="0" />

            <ImageView
                android:id="@+id/imageView_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_email_black_24dp"
                app:layout_constraintBaseline_creator="1"
                app:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/fragmente_cliente_details"
                app:layout_editor_absoluteX="16dp"
                app:layout_editor_absoluteY="72dp"
                tools:ignore="MissingConstraints"
                tools:layout_constraintBaseline_creator="0"
                tools:layout_constraintLeft_creator="0"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="72dp" />

            <TextView
                android:id="@+id/fragment_cliente_details__email"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:text="raul.gomo@gmail.com"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_editor_absoluteX="73dp"
                app:layout_editor_absoluteY="72dp"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="0" />

            <ImageView
                android:id="@+id/imageView_sexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_wc_black_24dp"
                app:layout_constraintBaseline_creator="1"
                app:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/fragmente_cliente_details"
                app:layout_editor_absoluteX="16dp"
                app:layout_editor_absoluteY="128dp"
                tools:ignore="MissingConstraints"
                tools:layout_constraintBaseline_creator="0"
                tools:layout_constraintLeft_creator="0"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="128dp" />

            <TextView
                android:id="@+id/fragment_cliente_details__sexo"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:text="Hombre"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_editor_absoluteX="73dp"
                app:layout_editor_absoluteY="128dp"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="0" />

            <TextView
                android:id="@+id/fragment_cliente_details__edad"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:text="25"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_editor_absoluteX="73dp"
                app:layout_editor_absoluteY="184dp"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="0" />

            <ImageView
                android:id="@+id/imageView_medidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_straighten_black_24dp"
                app:layout_constraintBaseline_creator="1"
                app:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="@+id/fragmente_cliente_details"
                app:layout_editor_absoluteX="16dp"
                app:layout_editor_absoluteY="240dp"
                tools:ignore="MissingConstraints"
                tools:layout_constraintBaseline_creator="0"
                tools:layout_constraintLeft_creator="0"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="240dp" />

            <TextView
                android:id="@+id/fragment_cliente_details__peso"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:ems="10"
                android:text="70"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="fragment_cliente_details__peso_u"
                app:layout_constraintStart_toEndOf="imageView_medidas"
                app:layout_constraintTop_toBottomOf="fragment_cliente_details__edad"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="0" />

            <TextView
                android:id="@+id/fragment_cliente_details__peso_u"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:ems="10"
                android:text=" kg"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_cliente_details__peso"
                app:layout_constraintEnd_toStartOf="@id/fragment_cliente_details__altura"
                app:layout_constraintStart_toEndOf="@id/fragment_cliente_details__peso"
                tools:layout_constraintTop_creator="0" />

            <TextView
                android:id="@+id/fragment_cliente_details__altura"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:ems="10"
                android:text="1'71"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_cliente_details__peso_u"
                app:layout_constraintEnd_toStartOf="@id/fragment_cliente_details__altura_u"
                app:layout_constraintStart_toEndOf="@id/fragment_cliente_details__peso_u"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="0" />

            <TextView
                android:id="@+id/fragment_cliente_details__altura_u"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:ems="10"
                android:text=" cm"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_cliente_details__altura"
                app:layout_constraintStart_toEndOf="@id/fragment_cliente_details__altura"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="0" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>